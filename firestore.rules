/**
 * @fileoverview Firestore Security Rules for LocalBasket application.
 *
 * Core Philosophy:
 * This ruleset prioritizes secure access to user-specific data and allows public read access where appropriate,
 * while maintaining strict ownership control for write operations. Data validation is relaxed to enable rapid prototyping.
 *
 * Data Structure:
 * - /users/{userId}:  User profile data, accessible only by the user themselves.
 * - /stores/{storeId}: Store data, publicly readable, writable only by the store owner.
 * - /stores/{storeId}/products/{productId}: Product data for a specific store, publicly readable, writable only by the store owner.
 * - /orders/{orderId}: Order data, publicly readable, writable only by the user who placed the order.
 * - /voice-orders/{voiceOrderId}: Voice order data, publicly readable.
 * - /orders/{orderId}/orderItems/{orderItemId}: Order item data, publicly readable, writable only by the user who placed the order.
 * - /users/{userId}/productRecommendations/{productRecommendationId}: Product recommendation data, accessible only by the user.
 * - /cachedRecipes/{recipeId}: Cached recipe data, publicly readable.
 *
 * Key Security Decisions:
 * - User listing is disallowed.
 * - Read-only collections are publicly readable (`get`, `list` are `if true`).
 * - Ownership is enforced via an `ownerId` field on the document or through the path structure.
 *
 * Denormalization for Authorization:
 * - The `Store` entity includes an `ownerId` field to simplify ownership checks for stores and their subcollections (products).
 * - The `Order` entity includes a `userId` to enforce ownership for orders and their subcollections (orderItems).
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Checks if the request is authenticated.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the authenticated user is the owner of the resource.
     */
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    /**
     * @description Checks if the authenticated user is the owner of an existing resource.
     */
    function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
    }

    /**
     * @description Rules for user profiles.
     * @path /users/{userId}
     * @allow (create) User with ID 'user123' can create their profile.
     *   request.auth.uid == 'user123'
     * @deny (create) User with ID 'user123' cannot create profile for 'user456'.
     *   request.auth.uid == 'user123', request.resource.data.id == 'user456'
     * @principle Enforces user-ownership for profile data.
     */
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if false; // User listing is not allowed

      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Rules for stores.
     * @path /stores/{storeId}
     * @allow (get) Any user can retrieve store information.
     * @allow (create) User with ID 'user123' can create a store they own.
     *   request.auth.uid == 'user123', request.resource.data.ownerId == 'user123'
     * @deny (update) User with ID 'user123' cannot update a store they do not own.
     *   request.auth.uid == 'user123', resource.data.ownerId == 'user456'
     * @principle Enforces document ownership for writes.
     */
    match /stores/{storeId} {
      allow get: if true;
      allow list: if true;

      allow create: if isSignedIn() && request.resource.data.ownerId == request.auth.uid;
      allow update: if isSignedIn() && resource.data.ownerId == request.auth.uid;
      allow delete: if isSignedIn() && resource.data.ownerId == request.auth.uid && resource != null;
    }

    /**
     * @description Rules for products within a store.
     * @path /stores/{storeId}/products/{productId}
     * @allow (get) Any user can retrieve product information.
     * @allow (create) User with ID 'user123' can create a product in their store.
     *   request.auth.uid == 'user123', get(/databases/$(database)/documents/stores/$(storeId)).data.ownerId == 'user123'
     * @deny (update) User with ID 'user123' cannot update a product in a store they do not own.
     *   request.auth.uid == 'user123', get(/databases/$(database)/documents/stores/$(storeId)).data.ownerId == 'user456'
     * @principle Enforces store ownership for product writes.
     */
    match /stores/{storeId}/products/{productId} {
      allow get: if true;
      allow list: if true;

      allow create: if isSignedIn() && get(/databases/$(database)/documents/stores/$(storeId)).data.ownerId == request.auth.uid;
      allow update: if isSignedIn() && get(/databases/$(database)/documents/stores/$(storeId)).data.ownerId == request.auth.uid;
      allow delete: if isSignedIn() && get(/databases/$(database)/documents/stores/$(storeId)).data.ownerId == request.auth.uid && resource != null;
    }

    /**
     * @description Rules for monthly packages within a store.
     * @path /stores/{storeId}/packages/{packageId}
     * @allow (get) Any user can retrieve monthly package information.
     * @allow (create) User with ID 'user123' can create a package in their store.
     *   request.auth.uid == 'user123', get(/databases/$(database)/documents/stores/$(storeId)).data.ownerId == 'user123'
     * @deny (update) User with ID 'user123' cannot update a package in a store they do not own.
     *   request.auth.uid == 'user123', get(/databases/$(database)/documents/stores/$(storeId)).data.ownerId == 'user456'
     * @principle Enforces store ownership for package writes.
     */
    match /stores/{storeId}/packages/{packageId} {
        allow get: if true;
        allow list: if true;

        allow create: if isSignedIn() && get(/databases/$(database)/documents/stores/$(storeId)).data.ownerId == request.auth.uid;
        allow update: if isSignedIn() && get(/databases/$(database)/documents/stores/$(storeId)).data.ownerId == request.auth.uid;
        allow delete: if isSignedIn() && get(/databases/$(database)/documents/stores/$(storeId)).data.ownerId == request.auth.uid && resource != null;
    }

    /**
     * @description Rules for orders.
     * @path /orders/{orderId}
     * @allow (get) Any user can retrieve order information.
     * @allow (create) User with ID 'user123' can create an order with their ID.
     *   request.auth.uid == 'user123', request.resource.data.userId == 'user123'
     * @deny (update) User with ID 'user123' cannot update an order they do not own.
     *   request.auth.uid == 'user123', resource.data.userId == 'user456'
     * @principle Enforces document ownership for writes.
     */
    match /orders/{orderId} {
      allow get: if true;
      allow list: if isSignedIn();

      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update: if isExistingOwner(resource.data.userId);
      allow delete: if isExistingOwner(resource.data.userId);
    }

     /**
      * @description Rules for voice orders.
      * @path /voice-orders/{voiceOrderId}
      * @allow (get) Any user can retrieve voice order information.
      * @allow (list) Any user can list voice orders.
      * @allow (create) Any authenticated user can create a voice order.
      * @allow (update) No one can update a voice order.
      * @allow (delete) No one can delete a voice order.
      * @principle Voice orders are publicly readable.
      */
    match /voice-orders/{voiceOrderId} {
        allow get: if true;
        allow list: if true;

        allow create: if isSignedIn();
        allow update: if false;
        allow delete: if false;
    }

    /**
     * @description Rules for order items within an order.
     * @path /orders/{orderId}/orderItems/{orderItemId}
     * @allow (get) Any user can retrieve order item information.
     * @allow (create) User with ID 'user123' can create an order item in their order.
     *   request.auth.uid == 'user123', get(/databases/$(database)/documents/orders/$(orderId)).data.userId == 'user123'
     * @deny (update) User with ID 'user123' cannot update an order item in an order they do not own.
     *   request.auth.uid == 'user123', get(/databases/$(database)/documents/orders/$(orderId)).data.userId == 'user456'
     * @principle Enforces order ownership for order item writes.
     */
    match /orders/{orderId}/orderItems/{orderItemId} {
      allow get: if true;
      allow list: if true;

      allow create: if isSignedIn() && get(/databases/$(database)/documents/orders/$(orderId)).data.userId == request.auth.uid;
      allow update: if isSignedIn() && get(/databases/$(database)/documents/orders/$(orderId)).data.userId == request.auth.uid;
      allow delete: if isSignedIn() && get(/databases/$(database)/documents/orders/$(orderId)).data.userId == request.auth.uid && resource != null;
    }

    /**
     * @description Rules for product recommendations for a user.
     * @path /users/{userId}/productRecommendations/{productRecommendationId}
     * @allow (get) User with ID 'user123' can retrieve their product recommendations.
     *   request.auth.uid == 'user123'
     * @deny (create) User with ID 'user123' cannot create product recommendations for 'user456'.
     *   request.auth.uid == 'user123'
     * @principle Enforces user-ownership for product recommendation data.
     */
    match /users/{userId}/productRecommendations/{productRecommendationId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);

      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Rules for cached recipes.
     * @path /cachedRecipes/{recipeId}
     * @allow (get) Any user can retrieve cached recipe information.
     * @allow (create) Any authenticated user can create a cached recipe.
     * @deny (update) No one can update a cached recipe.
     * @deny (delete) No one can delete a cached recipe.
     * @principle Cached recipes are publicly readable.
     */
    match /cachedRecipes/{recipeId} {
        allow get: if true;
        allow list: if true;

        allow create: if isSignedIn();
        allow update: if false;
        allow delete: if false;
    }
  }
}