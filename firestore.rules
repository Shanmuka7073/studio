/**
 * @fileoverview Firestore Security Rules for LocalBasket.
 *
 * Core Philosophy:
 * This ruleset enforces a user-ownership model for user profiles and product recommendations.
 * Orders are readable by all, but only updatable by the owner or a server function.
 * Stores and products are accessible by everyone.
 *
 * Data Structure:
 * - /users/{userId}: Stores user profile data. Only accessible by the user themselves.
 * - /stores/{storeId}: Stores data related to each store.
 * - /stores/{storeId}/products/{productId}: Stores product information as a subcollection of a store.
 * - /orders/{orderId}: Stores order information.
 * - /orders/{orderId}/orderItems/{orderItemId}: Stores order item information for each order.
 * - /users/{userId}/productRecommendations/{productRecommendationId}: Stores product recommendations for each user.
 *
 * Key Security Decisions:
 * - Users can only read/write their own profile data.
 * - Stores and Products are publicly readable. Writes to these collections must be protected by some form of authentication.
 * - Orders are publicly readable to facilitate order discovery, but modifications are restricted to owners.
 * - Product Recommendations are private to each user.
 *
 * Denormalization for Authorization:
 * The `Order` document includes `userId` and `storeId` fields to allow for simpler, more performant rules based on ownership.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Allows users to read and write their own profile data.
     * @path /users/{userId}
     * @allow (create, update, get, delete) if the user's UID matches the userId.
     * @deny (create, update, get, delete) if the user's UID does not match the userId.
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId} {
      // Verified authenticated
      function isSignedIn() {
        return request.auth != null;
      }

      // Verifies the user ID
      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      // Function to check if the user is an existing owner.
      function isExistingOwner(userId) {
          return isOwner(userId) && resource != null;
      }

      allow get: if isSignedIn() && isOwner(userId);
      allow list: if false;
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && isOwner(userId);
      allow delete: if isSignedIn() && isOwner(userId);
    }

    /**
     * @description Allows anyone to read stores, but restricts creation, updates, and deletes.
     * @path /stores/{storeId}
     * @allow (get, list) if true.
     * @deny (create, update, delete) always.
     * @principle Public read, owner-only write (currently write is disallowed).
     */
    match /stores/{storeId} {
      allow get, list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Allows anyone to read products, but restricts creation, updates, and deletes.
     * @path /stores/{storeId}/products/{productId}
     * @allow (get, list) if true.
     * @deny (create, update, delete) always.
     * @principle Public read, owner-only write (currently write is disallowed).
     */
    match /stores/{storeId}/products/{productId} {
      allow get, list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Allows anyone to read orders, but restricts creation, updates, and deletes to the order owner.
     * @path /orders/{orderId}
     * @allow (get, list) if true.
     * @allow (create) if request.auth.uid == request.resource.data.userId
     * @deny (update, delete) if the user is not the owner.
     * @principle Public read, owner-only write.
     */
    match /orders/{orderId} {
      // Verified authenticated
      function isSignedIn() {
        return request.auth != null;
      }

      // Verifies the user ID
      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      // Function to check if the user is an existing owner.
      function isExistingOwner(userId) {
          return isOwner(userId) && resource != null;
      }

      allow get, list: if true;
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow delete: if isSignedIn() && request.resource.data.userId == request.auth.uid;
    }

    /**
     * @description Allows anyone to read order items, but restricts creation, updates, and deletes.
     * @path /orders/{orderId}/orderItems/{orderItemId}
     * @allow (get, list) if true.
     * @deny (create, update, delete) always.
     * @principle Public read, owner-only write (currently write is disallowed).
     */
    match /orders/{orderId}/orderItems/{orderItemId} {
      allow get, list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Allows users to read and write their own product recommendations.
     * @path /users/{userId}/productRecommendations/{productRecommendationId}
     * @allow (create, update, get, delete) if the user's UID matches the userId.
     * @deny (create, update, get, delete) if the user's UID does not match the userId.
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId}/productRecommendations/{productRecommendationId} {
      // Verified authenticated
      function isSignedIn() {
        return request.auth != null;
      }

      // Verifies the user ID
      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      // Function to check if the user is an existing owner.
      function isExistingOwner(userId) {
          return isOwner(userId) && resource != null;
      }

      allow get: if isSignedIn() && isOwner(userId);
      allow list: if false;
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && isOwner(userId);
      allow delete: if isSignedIn() && isOwner(userId);
    }
  }
}