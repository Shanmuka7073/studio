/**
 * @fileoverview Firestore Security Rules for LocalBasket application.
 *
 * Core Philosophy:
 * This ruleset prioritizes strong authorization by enforcing user-ownership and restricting data access based on user roles.
 * Data structure follows a hierarchical model with user-specific data nested under /users/{userId}.
 * Key Security Decisions:
 * - Users can only access their own data under /users/{userId}.
 * - Orders are readable by anyone. Only authenticated users can create orders.
 * - Listing of orders is not allowed for now to prevent data leakage, given the lack of role-based access control.
 * - Schemas are flexible to enable rapid prototyping, but ownership fields are strictly validated on write.
 *
 * Denormalization for Authorization:
 * - The Order entity contains denormalized 'userId' and 'storeId' fields to simplify querying and security rules.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Secure user profiles under /users/{userId}.
     * @path /users/{userId}
     * @allow (create) User A9dTs1g9U1SPREqHsHsWKkCqvMx1 can create their own profile.
     * @allow (get, update, delete) User A9dTs1g9U1SPREqHsHsWKkCqvMx1 can access their own profile.
     * @deny (create) User B cannot create a profile for User A.
     * @deny (get, update, delete) User B cannot access User A's profile.
     * @principle Enforces strict user-ownership for profile data.
     */
    match /users/{userId} {
      //  Only allow access if the user is signed in.
      allow get: if isSignedIn() && isOwner(userId);
      allow list: if false;
      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.id == userId;
      allow update: if isSignedIn() && isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isSignedIn() && isExistingOwner(userId);
    }

    /**
     * @description Secure store data under /stores/{storeId}.
     * @path /stores/{storeId}
     * @allow (create) User A9dTs1g9U1SPREqHsHsWKkCqvMx1 can create a store if they are the owner.
     * @allow (get, update, delete) User A9dTs1g9U1SPREqHsHsWKkCqvMx1 can access and manage their own store.
     * @deny (create) User B cannot create a store for User A.
     * @deny (get, update, delete) User B cannot access or manage User A's store.
     * @principle Enforces ownership for store management.
     */
    match /stores/{storeId} {
      allow get: if true;
      allow list: if true;
      allow create: if isSignedIn() && request.resource.data.ownerId == request.auth.uid;
      allow update: if isSignedIn() && isExistingOwner(resource.data.ownerId);
      allow delete: if isSignedIn() && isExistingOwner(resource.data.ownerId);
    }

    /**
     * @description Secure product data under /stores/{storeId}/products/{productId}.
     * @path /stores/{storeId}/products/{productId}
     * @allow (create) User A9dTs1g9U1SPREqHsHsWKkCqvMx1 can create a product if they own the store.
     * @allow (get, update, delete) User A9dTs1g9U1SPREqHsHsWKkCqvMx1 can access and manage products in their store.
     * @deny (create) User B cannot create a product for User A's store.
     * @deny (get, update, delete) User B cannot access or manage products in User A's store.
     * @principle Enforces ownership for product management within a store.
     */
    match /stores/{storeId}/products/{productId} {
      allow get: if true;
      allow list: if true;
      allow create: if isSignedIn() && get(/databases/$(database)/documents/stores/$(storeId)).data.ownerId == request.auth.uid;
      allow update: if isSignedIn() && isStoreOwner(storeId);
      allow delete: if isSignedIn() && isStoreOwner(storeId);
    }

    /**
     * @description Secure order data under /orders/{orderId}.
     * @path /orders/{orderId}
     * @allow (create) User A9dTs1g9U1SPREqHsHsWKkCqvMx1 can create orders if signed in. The userId must match the authenticated user's id.
     * @allow (get) Anyone can view any order details.
     * @deny (update, delete) Only the creating user or an admin should be able to modify/delete an order (not implemented in this version).
     * @principle Allows public read access, but restricts write access to the creating user.
     */
    match /orders/{orderId} {
      allow get: if true;
      allow list: if false;
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update: if false; // TODO: Add owner or admin validation once roles are defined.
      allow delete: if false; // TODO: Add owner or admin validation once roles are defined.
    }

    /**
     * @description Secure order item data under /orders/{orderId}/orderItems/{orderItemId}.
     * @path /orders/{orderId}/orderItems/{orderItemId}
     * @allow (create, get, update, delete) Access should be restricted to authorized users (not implemented in this version).
     * @principle Currently disables all access due to unclear authorization strategy.
     */
    match /orders/{orderId}/orderItems/{orderItemId} {
      allow get: if false; // TODO: Implement authorization.
      allow list: if false; // TODO: Implement authorization.
      allow create: if false; // TODO: Implement authorization.
      allow update: if false; // TODO: Implement authorization.
      allow delete: if false; // TODO: Implement authorization.
    }

    /**
     * @description Secure product recommendation data under /users/{userId}/productRecommendations/{productRecommendationId}.
     * @path /users/{userId}/productRecommendations/{productRecommendationId}
     * @allow (create, get, update, delete) Access should be restricted to authorized users (owner).
     * @principle Currently only the owner can access the recommendations.
     */
    match /users/{userId}/productRecommendations/{productRecommendationId} {
      allow get: if isSignedIn() && isOwner(userId);
      allow list: if isSignedIn() && isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isSignedIn() && isExistingOwner(userId) && request.resource.data.userId == userId;
      allow delete: if isSignedIn() && isExistingOwner(userId);
    }

    // ---- Helper functions ----

    // Check if the user is signed in.
    function isSignedIn() {
      return request.auth != null;
    }

    // Check if the user ID matches the authenticated user's ID.
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Check if the user ID matches the authenticated user's ID and the resource exists.
    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }

    // Check if the user is the owner of the store.
    function isStoreOwner(storeId) {
        return get(/databases/$(database)/documents/stores/$(storeId)).data.ownerId == request.auth.uid && resource != null;
    }
  }
}