/**
 * @fileoverview Firestore Security Rules for LocalBasket.
 *
 * Core Philosophy:
 * This ruleset prioritizes data ownership and user-based access control. It enforces a strict
 * separation of data, ensuring that users can only access their own information unless
 * explicitly granted broader permissions. In prototyping mode, schema validation is relaxed
 * to allow for rapid data model iteration, but authorization checks are strictly enforced.
 *
 * Data Structure:
 * - /users/{userId}: Stores individual user profiles, accessible only by the user.
 * - /stores/{storeId}: Stores store information.
 * - /stores/{storeId}/products/{productId}: Stores product information for each store.
 * - /stores/{storeId}/packages/{packageId}: Stores monthly package deals for each store.
 * - /orders/{orderId}: Stores order information. Includes 'userId' and 'storeId' for simpler rules.
 * - /voice-orders/{voiceOrderId}: Stores voice-only order information.
 * - /orders/{orderId}/orderItems/{orderItemId}: Stores order items for each order. Includes 'orderId' for simpler rules.
 * - /users/{userId}/productRecommendations/{productRecommendationId}: Stores product recommendations for each user.
 * - /cachedRecipes/{recipeId}: Stores cached recipes.
 * - /deliveryPartners/{partnerId}: Stores delivery partner data, with the document ID being the user ID.
 * - /deliveryPartners/{partnerId}/payouts/{payoutId}: Stores payout requests for each delivery partner.
 *
 * Key Security Decisions:
 * - User data is strictly private; users can only access their own documents.
 * - Listing of users is explicitly denied to prevent enumeration.
 * - Read-only collections are allowed for public data (e.g., stores, products), but writes require authentication and authorization.
 * - Ambiguous relationships default to owner-only access.
 * - Delivery partners can read all orders but can only write to accepted orders.
 *
 * Denormalization for Authorization:
 * - The 'Order' and 'OrderItem' entities include denormalized fields like 'userId', 'storeId', and 'orderId'
 *   to allow security rules to be enforced without complex queries.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Allows users to read and write their own profile data.
     * @path /users/{userId}
     * @allow (create, update, get, delete) if request.auth.uid == userId
     * @deny (create, update, get, delete) if request.auth.uid != userId
     * @principle Enforces user ownership for profile data.
     */
    match /users/{userId} {
      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if false; // Prevent user enumeration

      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Allows anyone to read store data, but restricts modifications.
     * @path /stores/{storeId}
     * @allow (get, list) if true
     * @allow (create) if request.auth != null
     * @deny (update, delete) always
     * @principle Allows public reads but requires authentication for writes.
     */
    match /stores/{storeId} {
      allow get, list: if true;

      allow create: if isSignedIn();
      allow update: if false; // TODO: Add store owner validation once ownership is defined.
      allow delete: if false; // TODO: Add store owner validation once ownership is defined.
    }

    /**
     * @description Allows anyone to read product data, but restricts modifications to store owners.
     * @path /stores/{storeId}/products/{productId}
     * @allow (get, list) if true
     * @allow (create) if isSignedIn()
     * @deny (update, delete) always
     * @principle Allows public reads but requires authentication for writes.
     */
    match /stores/{storeId}/products/{productId} {
      allow get, list: if true;

      allow create: if isSignedIn();
      allow update: if false; // TODO: Add store owner validation once ownership is defined.
      allow delete: if false; // TODO: Add store owner validation once ownership is defined.
    }

    /**
     * @description Allows anyone to read package data, but restricts modifications to store owners.
     * @path /stores/{storeId}/packages/{packageId}
     * @allow (get, list) if true
     * @allow (create) if isSignedIn()
     * @deny (update, delete) always
     * @principle Allows public reads but requires authentication for writes.
     */
    match /stores/{storeId}/packages/{packageId} {
      allow get, list: if true;

      allow create: if isSignedIn();
      allow update: if false; // TODO: Add store owner validation once ownership is defined.
      allow delete: if false; // TODO: Add store owner validation once ownership is defined.
    }

    /**
     * @description Allows reads and writes to order data, but restricts modifications to authorized users.
     * @path /orders/{orderId}
     */
    match /orders/{orderId} {
       function isDeliveryPartner() {
            return get(/databases/$(database)/documents/deliveryPartners/$(request.auth.uid)).data.userId == request.auth.uid;
      }

      allow get, list: if isDeliveryPartner();

      // Delivery partners can only create accepted orders
      allow create: if isDeliveryPartner() && request.resource.data.status == 'accepted';
      allow update: if false;
      allow delete: if false;
    }

     /**
      * @description Allows reads for voice orders.
      * @path /voice-orders/{voiceOrderId}
      */
    match /voice-orders/{voiceOrderId} {
         function isDeliveryPartner() {
            return get(/databases/$(database)/documents/deliveryPartners/$(request.auth.uid)).data.userId == request.auth.uid;
        }
        allow get, list: if isDeliveryPartner();
        allow create, update, delete: if false;
     }

    /**
     * @description Allows reads and writes to order item data, but restricts modifications to authorized users.
     * @path /orders/{orderId}/orderItems/{orderItemId}
     */
    match /orders/{orderId}/orderItems/{orderItemId} {
      allow get, list: if true; // Orders are readable
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Allows users to read and write their own product recommendations.
     * @path /users/{userId}/productRecommendations/{productRecommendationId}
     * @allow (create, update, get, delete) if request.auth.uid == userId
     * @deny (create, update, get, delete) if request.auth.uid != userId
     * @principle Enforces user ownership for product recommendations.
     */
    match /users/{userId}/productRecommendations/{productRecommendationId} {
      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);

      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Allows anyone to read cached recipe data, but restricts modifications.
     * @path /cachedRecipes/{recipeId}
     * @allow (get, list) if true
     * @allow (create) if isSignedIn()
     * @deny (update, delete) always
     * @principle Allows public reads but requires authentication for writes.
     */
    match /cachedRecipes/{recipeId} {
      allow get, list: if true;

      allow create: if isSignedIn();
      allow update: if false; // TODO: Add admin validation once roles are defined.
      allow delete: if false; // TODO: Add admin validation once roles are defined.
    }

    /**
     * @description Manages delivery partner data.
     * @path /deliveryPartners/{partnerId}
     */
    match /deliveryPartners/{partnerId} {
      function isPartner(partnerId) {
        return request.auth.uid == partnerId;
      }

      function isExistingPartner(partnerId) {
        return isPartner(partnerId) && resource != null;
      }

      allow get: if isPartner(partnerId);
      allow list: if false; // Prevent enumeration

      allow create: if isPartner(partnerId) && request.resource.data.userId == partnerId;
      allow update: if isExistingPartner(partnerId) && request.resource.data.userId == resource.data.userId;
      allow delete: if false; // Deletion not allowed
    }

    /**
     * @description Manages payout requests for delivery partners.
     * @path /deliveryPartners/{partnerId}/payouts/{payoutId}
     */
    match /deliveryPartners/{partnerId}/payouts/{payoutId} {
      function isPartner(partnerId) {
        return request.auth.uid == partnerId;
      }

      allow get, list: if isPartner(partnerId);
      allow create: if isPartner(partnerId);
      allow update: if false; // Only backend can update payout status
      allow delete: if false; // Deletion not allowed
    }

    function isSignedIn() {
      return request.auth != null;
    }
  }
}