/**
 * @file Firestore Security Rules
 * @description This ruleset enforces a strict user-ownership model for user profiles and store ownership,
 *              while allowing public read access to stores and products.
 *              Delivery partners can manage their payout information.
 *
 * @dataStructure
 * - /users/{userId}: Stores user profile data, accessible only by the user themselves.
 * - /stores/{storeId}: Stores data related to each store.
 * - /stores/{storeId}/products/{productId}: Stores product information as a subcollection of a store.
 * - /stores/{storeId}/packages/{packageId}: Stores monthly package deals for a specific store.
 * - /orders/{orderId}: Stores order information. Includes denormalized 'userId' and 'storeId' for querying and security rules.
 * - /voice-orders/{voiceOrderId}: Stores voice-only orders. Accessible by delivery partners for fulfillment.
 * - /orders/{orderId}/orderItems/{orderItemId}: Stores order item information for each order. Includes denormalized 'orderId' for authorization independence.
 * - /users/{userId}/productRecommendations/{productRecommendationId}: Stores product recommendations for each user. Includes denormalized 'userId' for authorization independence.
 * - /cachedRecipes/{recipeId}: Stores cached recipe ingredients to reduce AI usage.
 * - /deliveryPartners/{partnerId}: Stores earnings and payout information for delivery partners. The document ID is the partner's user ID.
 * - /deliveryPartners/{partnerId}/payouts/{payoutId}: Stores a record of all payout requests for a delivery partner.
 *
 * @keySecurityDecisions
 * - User listing is disallowed to protect privacy.
 * - Stores and Products are publicly readable, but only the store owner can modify them.
 * - Delivery partners can only manage their own payout information.
 *
 * @denormalizationForAuthorization
 * - Orders: Includes 'userId' and 'storeId' to enable efficient authorization checks.
 * - OrderItems: Includes 'orderId' to allow independent authorization.
 * - ProductRecommendations: Includes 'userId' for direct user-based authorization.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Secures user profiles, allowing only the user themselves to read and write their own data.
     * @path /users/{userId}
     * @allow (create, update, delete, get): if request.auth.uid == userId
     * @deny (create): if request.auth.uid != userId
     * @deny (update, delete): if request.auth.uid != userId || resource == null
     * @deny (list): Always
     * @principle Enforces strict user-ownership.
     */
    match /users/{userId} {
      function isOwner(userId) {
        return request.auth.uid == userId;
      }
      function isExistingOwner(userId) {
          return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if false; // User listing is not permitted.
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Secures stores, allowing public read access but restricting creation, updates, and deletes to the store owner.
     * @path /stores/{storeId}
     * @allow (get, list): if true
     * @allow (create): if request.auth.uid == request.resource.data.ownerId
     * @allow (update, delete): if request.auth.uid == resource.data.ownerId && resource != null
     * @deny (create): if request.auth.uid != request.resource.data.ownerId
     * @deny (update, delete): if request.auth.uid != resource.data.ownerId || resource == null
     * @principle Allows public read access with owner-only writes.
     */
    match /stores/{storeId} {
      function isOwner(ownerId) {
        return request.auth.uid == ownerId;
      }
      function isExistingOwner(ownerId) {
        return isOwner(ownerId) && resource != null;
      }

      allow get, list: if true;
      allow create: if isOwner(request.resource.data.ownerId);
      allow update: if isExistingOwner(resource.data.ownerId);
      allow delete: if isExistingOwner(resource.data.ownerId);
    }

    /**
     * @description Secures products, allowing public read access but restricting creation, updates, and deletes to the store owner.
     * @path /stores/{storeId}/products/{productId}
     * @allow (get, list): if true
     * @allow (create): if get(/databases/$(database)/documents/stores/$(storeId)).data.ownerId == request.auth.uid
     * @allow (update, delete): if get(/databases/$(database)/documents/stores/$(storeId)).data.ownerId == request.auth.uid && resource != null
     * @deny (create): if get(/databases/$(database)/documents/stores/$(storeId)).data.ownerId != request.auth.uid
     * @deny (update, delete): if get(/databases/$(database)/documents/stores/$(storeId)).data.ownerId != request.auth.uid || resource == null
     * @principle Allows public read access with owner-only writes, using a 'get()' call to verify store ownership.
     */
    match /stores/{storeId}/products/{productId} {
        function isStoreOwner(storeId) {
            return get(/databases/$(database)/documents/stores/$(storeId)).data.ownerId == request.auth.uid;
        }

        allow get, list: if true;
        allow create: if isStoreOwner(storeId);
        allow update: if isStoreOwner(storeId) && resource != null;
        allow delete: if isStoreOwner(storeId) && resource != null;
    }

    /**
     * @description Secures monthly packages, allowing public read access but restricting creation, updates, and deletes to the store owner.
     * @path /stores/{storeId}/packages/{packageId}
     * @allow (get, list): if true
     * @allow (create): if get(/databases/$(database)/documents/stores/$(storeId)).data.ownerId == request.auth.uid
     * @allow (update, delete): if get(/databases/$(database)/documents/stores/$(storeId)).data.ownerId == request.auth.uid && resource != null
     * @deny (create): if get(/databases/$(database)/documents/stores/$(storeId)).data.ownerId != request.auth.uid
     * @deny (update, delete): if get(/databases/$(database)/documents/stores/$(storeId)).data.ownerId != request.auth.uid || resource == null
     * @principle Allows public read access with owner-only writes, using a 'get()' call to verify store ownership.
     */
    match /stores/{storeId}/packages/{packageId} {
      function isStoreOwner(storeId) {
          return get(/databases/$(database)/documents/stores/$(storeId)).data.ownerId == request.auth.uid;
      }

      allow get, list: if true;
      allow create: if isStoreOwner(storeId);
      allow update: if isStoreOwner(storeId) && resource != null;
      allow delete: if isStoreOwner(storeId) && resource != null;
    }

    /**
     * @description Secures orders, allowing only the user who placed the order to read it and allowing anyone to create an order.
     *              Writes (updates, deletes) are disallowed.
     * @path /orders/{orderId}
     * @allow (get): if request.auth.uid == resource.data.userId
     * @allow (list): if request.auth.uid == resource.data.userId
     * @allow (create): if request.auth.uid == request.resource.data.userId
     * @deny (update, delete): Always
     * @principle Enforces user-ownership for reads and allows anyone to create an order for themselves.
     */
    match /orders/{orderId} {
      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      allow get: if isOwner(resource.data.userId);
      allow list: if isOwner(resource.data.userId);
      allow create: if isOwner(request.resource.data.userId);
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Secures voice orders, allowing read access to delivery partners. Writes are disallowed.
     * @path /voice-orders/{voiceOrderId}
     * @allow (get, list): if true
     * @deny (create, update, delete): Always
     * @principle Allows public read access for delivery partners.
     */
    match /voice-orders/{voiceOrderId} {
      allow get, list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Secures order items, allowing read access to the user who placed the order. Writes are disallowed.
     * @path /orders/{orderId}/orderItems/{orderItemId}
     * @allow (get, list): if get(/databases/$(database)/documents/orders/$(orderId)).data.userId == request.auth.uid
     * @deny (create, update, delete): Always
     * @principle Enforces user-ownership for reads based on the parent order.
     */
    match /orders/{orderId}/orderItems/{orderItemId} {
      function isOrderOwner(orderId) {
          return get(/databases/$(database)/documents/orders/$(orderId)).data.userId == request.auth.uid;
      }

      allow get, list: if isOrderOwner(orderId);
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Secures product recommendations, allowing only the user for whom the recommendation was made to read them. Writes are disallowed.
     * @path /users/{userId}/productRecommendations/{productRecommendationId}
     * @allow (get, list): if request.auth.uid == userId
     * @deny (create, update, delete): Always
     * @principle Enforces user-ownership for product recommendations.
     */
    match /users/{userId}/productRecommendations/{productRecommendationId} {
      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      allow get, list: if isOwner(userId);
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Secures cached recipes, allowing public read access. Writes are disallowed.
     * @path /cachedRecipes/{recipeId}
     * @allow (get, list): if true
     * @deny (create, update, delete): Always
     * @principle Allows public read access for cached recipes.
     */
    match /cachedRecipes/{recipeId} {
      allow get, list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Secures delivery partner data, allowing partners to manage their own information.
     * @path /deliveryPartners/{partnerId}
     * @allow (get): if request.auth.uid == partnerId
     * @allow (list): if false; // Do not allow listing all delivery partners.
     * @allow (create): if request.auth.uid == partnerId && request.resource.data.userId == partnerId
     * @allow (update): if request.auth.uid == partnerId && resource != null && request.resource.data.userId == partnerId
     * @allow (delete): if request.auth.uid == partnerId && resource != null
     * @principle Enforces user-ownership for delivery partner data.
     */
    match /deliveryPartners/{partnerId} {
      function isOwner(partnerId) {
        return request.auth.uid == partnerId;
      }

      function isExistingOwner(partnerId) {
          return isOwner(partnerId) && resource != null;
      }

      allow get: if isOwner(partnerId);
      allow list: if false; // Do not allow listing all delivery partners
      allow create: if isOwner(partnerId) && request.resource.data.userId == partnerId;
      allow update: if isExistingOwner(partnerId) && request.resource.data.userId == partnerId;
      allow delete: if isExistingOwner(partnerId);
    }

    /**
     * @description Secures payout requests, allowing a delivery partner to create payout requests and to view their own requests.
     *              Updates and deletes are disallowed.
     * @path /deliveryPartners/{partnerId}/payouts/{payoutId}
     * @allow (get, list): if request.auth.uid == partnerId
     * @allow (create): if request.auth.uid == partnerId && request.resource.data.partnerId == partnerId
     * @deny (update, delete): Always
     * @principle Enforces user-ownership for payout requests.
     */
    match /deliveryPartners/{partnerId}/payouts/{payoutId} {
      function isOwner(partnerId) {
        return request.auth.uid == partnerId;
      }

      allow get, list: if isOwner(partnerId);
      allow create: if isOwner(partnerId) && request.resource.data.partnerId == partnerId;
      allow update: if false;
      allow delete: if false;
    }
  }
}