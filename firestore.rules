/**
 * @fileoverview Firestore Security Rules for LocalBasket application.
 *
 * Core Philosophy:
 * This ruleset prioritizes secure data access based on user roles and ownership,
 * while keeping schema validation to a minimum during prototyping.
 *
 * Data Structure:
 * - Users: /users/{userId} - User profile data, accessible only by the user themselves.
 * - Stores: /stores/{storeId} - Store data, writeable only by store owner.
 * - Products: /stores/{storeId}/products/{productId} - Products listed by a store, writeable only by the store owner.
 * - Orders: /orders/{orderId} - Order data, accessible by the user who created the order.
 * - OrderItems: /orders/{orderId}/orderItems/{orderItemId} - Items within an order.
 * - ProductRecommendations: /users/{userId}/productRecommendations/{productRecommendationId} - Product recommendations for users.
 * - VoiceOrders: /voice-orders/{voiceOrderId} - Voice orders, intended for access by authorized fulfillment partners.
 *
 * Key Security Decisions:
 * - Strict user ownership for user profiles and associated data.
 * - Owner-only write access to stores and their products.
 * - Orders are associated with user through the userId field.
 * - Voice orders are separate and should have rules applied that allow fulfillment partners to read and update status.
 *
 * Denormalization for Authorization:
 * - Orders include 'userId' and 'storeId' to simplify authorization checks.
 * - OrderItems include 'orderId' to simplify authorization checks.
 * - ProductRecommendations include 'userId' for authorization independence.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Grants read/write access to user profile data only to the authenticated user.
     * @path /users/{userId}
     * @allow (create, update, delete) if request.auth.uid == userId
     * @allow (get, list) if request.auth.uid == userId
     * @deny (create) if request.auth.uid != userId
     * @deny (update, delete) if request.auth.uid != userId
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId} {
      function isOwner(userId) {
        return request.auth.uid == userId;
      }
      function isSignedIn() {
        return request.auth != null;
      }

      allow get, list: if isSignedIn() && isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.id == userId;
      allow update: if isSignedIn() && isOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isSignedIn() && isOwner(userId);
    }

    /**
     * @description Grants owner-only access to store data.
     * @path /stores/{storeId}
     * @allow (create, update, delete) if request.auth.uid == resource.data.ownerId
     * @allow (get, list) if true
     * @deny (create) if request.auth.uid != request.resource.data.ownerId
     * @deny (update, delete) if request.auth.uid != resource.data.ownerId
     * @principle Enforces owner-only access based on the ownerId field.
     */
    match /stores/{storeId} {
      function isOwner(ownerId) {
        return request.auth.uid == ownerId;
      }
      function isSignedIn() {
        return request.auth != null;
      }
      function isExistingOwner(ownerId) {
          return isOwner(ownerId) && resource != null;
      }

      allow get, list: if true;
      allow create: if isSignedIn() && isOwner(request.resource.data.ownerId) && request.resource.data.id == storeId;
      allow update: if isSignedIn() && isExistingOwner(resource.data.ownerId) && request.resource.data.id == resource.data.id;
      allow delete: if isSignedIn() && isExistingOwner(resource.data.ownerId);
    }

    /**
     * @description Grants owner-only access to product data within a store.
     * @path /stores/{storeId}/products/{productId}
     * @allow (create, update, delete) if request.auth.uid == get(/databases/$(database)/documents/stores/$(storeId)).data.ownerId
     * @allow (get, list) if true
     * @deny (create) if request.auth.uid != get(/databases/$(database)/documents/stores/$(storeId)).data.ownerId
     * @deny (update, delete) if request.auth.uid != get(/databases/$(database)/documents/stores/$(storeId)).data.ownerId
     * @principle Enforces owner-only access based on the store's ownerId.
     */
    match /stores/{storeId}/products/{productId} {
      function isStoreOwner(storeId) {
        return request.auth.uid == get(/databases/$(database)/documents/stores/$(storeId)).data.ownerId;
      }
      function isSignedIn() {
        return request.auth != null;
      }
      function isExistingStoreOwner(storeId) {
          return isStoreOwner(storeId) && resource != null;
      }

      allow get, list: if true;
      allow create: if isSignedIn() && isStoreOwner(storeId) && request.resource.data.storeId == storeId;
      allow update: if isSignedIn() && isExistingStoreOwner(storeId) && request.resource.data.storeId == storeId;
      allow delete: if isSignedIn() && isExistingStoreOwner(storeId);
    }

    /**
     * @description Grants access to order data to the user who created the order.
     * @path /orders/{orderId}
     * @allow (create, update, delete) if request.auth.uid == resource.data.userId
     * @allow (get, list) if request.auth.uid == resource.data.userId
     * @deny (create) if request.auth.uid != request.resource.data.userId
     * @deny (update, delete) if request.auth.uid != resource.data.userId
     * @principle Enforces user-level access control for orders.
     */
    match /orders/{orderId} {
      function isOwner(userId) {
        return request.auth.uid == userId;
      }
      function isSignedIn() {
        return request.auth != null;
      }
      function isExistingOwner(userId) {
          return isOwner(userId) && resource != null;
      }

      allow get: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow list: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow create: if isSignedIn() && isOwner(request.resource.data.userId);
      allow update: if isSignedIn() && isExistingOwner(resource.data.userId);
      allow delete: if isSignedIn() && isExistingOwner(resource.data.userId);
    }

      /**
       * @description Allows access to voice orders.  Currently allows any authenticated user to read, create, update, and delete.
       * @path /voice-orders/{voiceOrderId}
       */
      match /voice-orders/{voiceOrderId} {
        function isSignedIn() {
          return request.auth != null;
        }
        function isExisting() {
          return resource != null;
        }
        allow get, list: if isSignedIn();
        allow create: if isSignedIn();
        allow update: if isSignedIn() && isExisting();
        allow delete: if isSignedIn() && isExisting();
      }

    /**
     * @description Grants access to order item data. Only accessible by authenticated users associated with order.
     * @path /orders/{orderId}/orderItems/{orderItemId}
     * @allow (create, update, delete) if request.auth.uid == get(/databases/$(database)/documents/orders/$(orderId)).data.userId
     * @allow (get, list) if request.auth.uid == get(/databases/$(database)/documents/orders/$(orderId)).data.userId
     * @deny (create) if request.auth.uid != get(/databases/$(database)/documents/orders/$(orderId)).data.userId
     * @deny (update, delete) if request.auth.uid != get(/databases/$(database)/documents/orders/$(orderId)).data.userId
     * @principle Enforces user-level access control for order items based on the parent order's userId.
     */
    match /orders/{orderId}/orderItems/{orderItemId} {
      function isOrderOwner(orderId) {
        return request.auth.uid == get(/databases/$(database)/documents/orders/$(orderId)).data.userId;
      }
      function isSignedIn() {
        return request.auth != null;
      }
      function isExistingOrderOwner(orderId) {
          return isOrderOwner(orderId) && resource != null;
      }

      allow get, list: if isSignedIn() && isOrderOwner(orderId);
      allow create: if isSignedIn() && isOrderOwner(orderId) && request.resource.data.orderId == orderId;
      allow update: if isSignedIn() && isExistingOrderOwner(orderId) && request.resource.data.orderId == orderId;
      allow delete: if isSignedIn() && isExistingOrderOwner(orderId);
    }

    /**
     * @description Grants access to product recommendations only to the associated user.
     * @path /users/{userId}/productRecommendations/{productRecommendationId}
     * @allow (create, update, delete) if request.auth.uid == userId
     * @allow (get, list) if request.auth.uid == userId
     * @deny (create) if request.auth.uid != userId
     * @deny (update, delete) if request.auth.uid != userId
     * @principle Enforces user-level access control for product recommendations.
     */
    match /users/{userId}/productRecommendations/{productRecommendationId} {
      function isOwner(userId) {
        return request.auth.uid == userId;
      }
      function isSignedIn() {
        return request.auth != null;
      }
      function isExistingOwner(userId) {
          return isOwner(userId) && resource != null;
      }

      allow get, list: if isSignedIn() && isOwner(userId);
      allow create: if isSignedIn() && isOwner(request.resource.data.userId) && request.resource.data.userId == userId;
      allow update: if isSignedIn() && isExistingOwner(resource.data.userId) && request.resource.data.userId == resource.data.userId;
      allow delete: if isSignedIn() && isExistingOwner(resource.data.userId);
    }
  }
}