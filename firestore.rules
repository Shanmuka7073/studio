/**
 * @fileoverview Firestore Security Rules for LocalBasket.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model for user-specific data,
 * and a public-read, owner-write model for stores and products. Orders can only be updated by store owners.
 * Delivery partner data is owner-only.
 *
 * Data Structure:
 * - /users/{userId}: User profile data, accessible only by the user.
 * - /stores/{storeId}: Store data, publicly readable, writable only by the store owner.
 * - /stores/{storeId}/products/{productId}: Product data, publicly readable, writable only by the store owner.
 * - /stores/{storeId}/packages/{packageId}: Monthly packages offered by a store, writable only by store owner.
 * - /orders/{orderId}: Order data. Updateable by the store owner.
 * - /voice-orders/{voiceOrderId}: Voice order data.
 * - /orders/{orderId}/orderItems/{orderItemId}: Order item data, protected by order ownership.
 * - /users/{userId}/productRecommendations/{productRecommendationId}: Product recommendations for a user, owned by the user.
 * - /cachedRecipes/{recipeId}: Cached recipe data, publicly readable.
 * - /deliveryPartners/{partnerId}: Delivery partner data. Accessible only by the delivery partner.
 * - /deliveryPartners/{partnerId}/payouts/{payoutId}: Payout data for a delivery partner, protected by partner ownership.
 *
 * Key Security Decisions:
 * - Users can only access their own profile data.
 * - Stores and Products are publicly readable to enable browsing without authentication.
 * - Orders can be updated only by store owner.
 * - Delivery partners can only access their own payout information.
 * - Listing of users is disallowed.
 *
 * Denormalization for Authorization:
 * - Orders: Includes `userId` and `storeId` to enable querying orders by user or store, and also to secure order access based on storeId.
 * - OrderItems: Includes `orderId` to secure order item access based on the parent order.
 * - ProductRecommendations: Includes `userId` to secure recommendations by user.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Checks if the request is authenticated.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the authenticated user's ID matches the provided user ID.
     */
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    /**
     * @description Checks if the authenticated user is the existing owner of the resource.
     * @principle Ensures only the owner can update or delete a resource.
     */
    function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
    }

    /**
     * @description User profile data. Accessible only by the user themselves.
     * @path /users/{userId}
     * @allow (create) - User 'foo' with id 'foo' can create their own profile.
     * @allow (get, update, delete) - User 'foo' with id 'foo' can read, update, and delete their own profile.
     * @deny (create) - User 'bar' cannot create a profile for user 'foo'.
     * @deny (get, update, delete) - User 'bar' cannot read, update, or delete user 'foo's profile.
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Store data. Publicly readable, writable only by the store owner.
     * @path /stores/{storeId}
     * @allow (get, list) - Any user can read store data.
     * @allow (create) - User 'foo' can create a store if they are the owner.
     * @allow (update, delete) - User 'foo' can update/delete their store.
     * @deny (create) - User 'bar' cannot create a store owned by 'foo'.
     * @deny (update, delete) - User 'bar' cannot update/delete store owned by 'foo'.
     * @principle Enforces document ownership for writes, allows public reads.
     */
    match /stores/{storeId} {
      allow get, list: if true;
      allow create: if isSignedIn() && request.resource.data.ownerId == request.auth.uid;
      allow update: if isExistingOwner(resource.data.ownerId);
      allow delete: if isExistingOwner(resource.data.ownerId);
    }

    /**
     * @description Product data as a subcollection of a store. Publicly readable, writable only by the store owner.
     * @path /stores/{storeId}/products/{productId}
     * @allow (get, list) - Any user can read product data.
     * @allow (create) - Store owner 'foo' can create a product in their store.
     * @allow (update, delete) - Store owner 'foo' can update/delete their product.
     * @deny (create) - User 'bar' cannot create a product in store owned by 'foo'.
     * @deny (update, delete) - User 'bar' cannot update/delete product in store owned by 'foo'.
     * @principle Enforces document ownership for writes, allows public reads.
     */
    match /stores/{storeId}/products/{productId} {
      allow get, list: if true;
      allow create: if isSignedIn() && get(/databases/$(database)/documents/stores/$(storeId)).data.ownerId == request.auth.uid;
      allow update: if isSignedIn() && get(/databases/$(database)/documents/stores/$(storeId)).data.ownerId == request.auth.uid && resource != null;
      allow delete: if isSignedIn() && get(/databases/$(database)/documents/stores/$(storeId)).data.ownerId == request.auth.uid && resource != null;
    }

     /**
      * @description Monthly package deals for a specific store. Writable only by store owner.
      * @path /stores/{storeId}/packages/{packageId}
      * @allow (get, list) - Any user can read monthly package data.
      * @allow (create) - Store owner 'foo' can create a package in their store.
      * @allow (update, delete) - Store owner 'foo' can update/delete their package.
      * @deny (create) - User 'bar' cannot create a package in store owned by 'foo'.
      * @deny (update, delete) - User 'bar' cannot update/delete package in store owned by 'foo'.
      * @principle Enforces document ownership for writes, allows public reads.
      */
    match /stores/{storeId}/packages/{packageId} {
        allow get, list: if true;
        allow create: if isSignedIn() && get(/databases/$(database)/documents/stores/$(storeId)).data.ownerId == request.auth.uid;
        allow update: if isSignedIn() && get(/databases/$(database)/documents/stores/$(storeId)).data.ownerId == request.auth.uid && resource != null;
        allow delete: if isSignedIn() && get(/databases/$(database)/documents/stores/$(storeId)).data.ownerId == request.auth.uid && resource != null;
    }

    /**
     * @description Order data. Includes denormalized 'userId' and 'storeId' for querying and security rules.
     * @path /orders/{orderId}
     * @allow (get) - Any user can read order data.
     * @allow (list) - Any user can list order data.
     * @allow (create) - Any authenticated user can create an order.
     * @allow (update) - The store owner of the store the order belongs to can update the order.
     * @deny (update) - User 'bar' cannot update order in store not owned by 'bar'.
     * @allow (delete) - The store owner of the store the order belongs to can delete the order.
     * @principle Restricts order updates to store owners.
     */
    match /orders/{orderId} {
      allow get, list: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn() && get(/databases/$(database)/documents/stores/$(resource.data.storeId)).data.ownerId == request.auth.uid && resource != null;
      allow delete: if isSignedIn() && get(/databases/$(database)/documents/stores/$(resource.data.storeId)).data.ownerId == request.auth.uid && resource != null;
    }

    /**
     * @description Voice order data. Accessible by delivery partners for fulfillment.
     * @path /voice-orders/{voiceOrderId}
     */
    match /voice-orders/{voiceOrderId} {
      allow get, list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Order item data for each order. Includes denormalized 'orderId' for authorization independence.
     * @path /orders/{orderId}/orderItems/{orderItemId}
     */
    match /orders/{orderId}/orderItems/{orderItemId} {
      allow get, list: if true;
      allow create: if isSignedIn() && get(/databases/$(database)/documents/orders/$(orderId)).data.userId == request.auth.uid;
      allow update: if isSignedIn() && get(/databases/$(database)/documents/orders/$(orderId)).data.userId == request.auth.uid && resource != null;
      allow delete: if isSignedIn() && get(/databases/$(database)/documents/orders/$(orderId)).data.userId == request.auth.uid && resource != null;
    }

    /**
     * @description Product recommendations for each user. Includes denormalized 'userId' for authorization independence.
     * @path /users/{userId}/productRecommendations/{productRecommendationId}
     */
    match /users/{userId}/productRecommendations/{productRecommendationId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Cached recipe data to reduce AI usage.
     * @path /cachedRecipes/{recipeId}
     */
    match /cachedRecipes/{recipeId} {
      allow get, list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Delivery partner data. The document ID is the partner's user ID.
     * @path /deliveryPartners/{partnerId}
     */
    match /deliveryPartners/{partnerId} {
      allow get: if isOwner(partnerId);
      allow list: if false;
      allow create: if isOwner(partnerId) && request.resource.data.userId == partnerId;
      allow update: if isExistingOwner(partnerId) && request.resource.data.userId == resource.data.userId;
      allow delete: if false;
    }

    /**
     * @description Payout data for a delivery partner, protected by partner ownership.
     * @path /deliveryPartners/{partnerId}/payouts/{payoutId}
     */
    match /deliveryPartners/{partnerId}/payouts/{payoutId} {
      allow get, list: if isOwner(partnerId);
      allow create: if isOwner(partnerId) && request.resource.data.partnerId == partnerId;
      allow update: if false;
      allow delete: if false;
    }
  }
}