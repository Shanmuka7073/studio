rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Protects user profile data, allowing only the user themselves to read and write their own data.
     * @path /users/{userId}
     * @allow (create, update, delete) if request.auth.uid == userId
     * @allow (get, list) if request.auth.uid == userId
     * @deny (create, update, delete) if request.auth.uid != userId
     * @deny (get, list) if request.auth.uid != userId
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId} {
      function isOwner(userId) {
        return request.auth.uid == userId;
      }
      function isSignedIn() {
        return request.auth != null;
      }
      allow get, list: if isSignedIn() && isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && isOwner(userId);
      allow delete: if isSignedIn() && isOwner(userId);
    }

    /**
     * @description Manages store data, allowing store owners to manage their own stores.
     * @path /stores/{storeId}
     * @allow (create, update, delete) if request.auth.uid == request.resource.data.ownerId
     * @allow (get, list) if true
     * @deny (create, update, delete) if request.auth.uid != request.resource.data.ownerId
     * @principle Enforces owner-only writes with public reads.
     */
    match /stores/{storeId} {
      function isStoreOwner(storeId) {
        return get(/databases/$(database)/documents/stores/$(storeId)).data.ownerId == request.auth.uid;
      }
      function isSignedIn() {
        return request.auth != null;
      }
      allow get, list: if true;
      allow create: if isSignedIn() && request.resource.data.ownerId == request.auth.uid;
      allow update: if isSignedIn() && isStoreOwner(storeId);
      allow delete: if isSignedIn() && isStoreOwner(storeId);
    }

    /**
     * @description Manages product data under a specific store, allowing only the store owner to manage products.
     * @path /stores/{storeId}/products/{productId}
     * @allow (create, update, delete) if get(/databases/$(database)/documents/stores/$(storeId)).data.ownerId == request.auth.uid
     * @allow (get, list) if true
     * @deny (create, update, delete) if get(/databases/$(database)/documents/stores/$(storeId)).data.ownerId != request.auth.uid
     * @principle Enforces owner-only writes with public reads, and validates the existence of the parent store.
     */
    match /stores/{storeId}/products/{productId} {
        function isStoreOwner(storeId) {
          return get(/databases/$(database)/documents/stores/$(storeId)).data.ownerId == request.auth.uid;
        }
        function isSignedIn() {
          return request.auth != null;
        }

        allow get, list: if true;
        allow create: if isSignedIn() && isStoreOwner(storeId);
        allow update: if isSignedIn() && isStoreOwner(storeId);
        allow delete: if isSignedIn() && isStoreOwner(storeId);
    }

    /**
     * @description Manages monthly package deals for a specific store, allowing only the store owner to manage packages.
     * @path /stores/{storeId}/packages/{packageId}
     * @allow (create, update, delete) if get(/databases/$(database)/documents/stores/$(storeId)).data.ownerId == request.auth.uid
     * @allow (get, list) if true
     * @deny (create, update, delete) if get(/databases/$(database)/documents/stores/$(storeId)).data.ownerId != request.auth.uid
     * @principle Enforces owner-only writes with public reads, and validates the existence of the parent store.
     */
    match /stores/{storeId}/packages/{packageId} {
      function isStoreOwner(storeId) {
        return get(/databases/$(database)/documents/stores/$(storeId)).data.ownerId == request.auth.uid;
      }
        function isSignedIn() {
          return request.auth != null;
        }

      allow get, list: if true;
      allow create: if isSignedIn() && isStoreOwner(storeId);
      allow update: if isSignedIn() && isStoreOwner(storeId);
      allow delete: if isSignedIn() && isStoreOwner(storeId);
    }

    /**
     * @description Controls access to order data, allowing only the user who placed the order to read and write.
     * @path /orders/{orderId}
     * @allow (create, update, delete) if request.auth.uid == request.resource.data.userId
     * @allow (get, list) if request.auth.uid == resource.data.userId
     * @deny (create, update, delete) if request.auth.uid != request.resource.data.userId
     * @deny (get, list) if request.auth.uid != resource.data.userId
     * @principle Enforces user-specific data access based on the 'userId' field.
     */
    match /orders/{orderId} {
      function isOrderOwner(orderId) {
        return get(/databases/$(database)/documents/orders/$(orderId)).data.userId == request.auth.uid;
      }
        function isSignedIn() {
          return request.auth != null;
        }
      allow get, list: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update: if isSignedIn() && isOrderOwner(orderId);
      allow delete: if isSignedIn() && isOrderOwner(orderId);
    }

    /**
     * @description Controls access to voice-only order data. Currently allows public read access for delivery partners.
     * @path /voice-orders/{voiceOrderId}
     * @allow get, list: if true
     * @allow create, update, delete: if false; // TODO: Implement more restrictive rules, e.g., based on delivery partner roles.
     * @principle Provides open access for delivery partners to view and fulfill orders.
     */
    match /voice-orders/{voiceOrderId} {
        function isSignedIn() {
          return request.auth != null;
        }
      allow get, list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Controls access to order item data, ensuring only authorized users can manage order items.
     * @path /orders/{orderId}/orderItems/{orderItemId}
     * @allow (create, update, delete) if get(/databases/$(database)/documents/orders/$(orderId)).data.userId == request.auth.uid
     * @allow (get, list) if get(/databases/$(database)/documents/orders/$(orderId)).data.userId == request.auth.uid
     * @deny (create, update, delete) if get(/databases/$(database)/documents/orders/$(orderId)).data.userId != request.auth.uid
     * @deny (get, list) if get(/databases/$(database)/documents/orders/$(orderId)).data.userId != request.auth.uid
     * @principle Enforces data access based on the parent order's ownership.
     */
    match /orders/{orderId}/orderItems/{orderItemId} {
      function isOrderOwner(orderId) {
        return get(/databases/$(database)/documents/orders/$(orderId)).data.userId == request.auth.uid;
      }
        function isSignedIn() {
          return request.auth != null;
        }
      allow get, list: if isSignedIn() && isOrderOwner(orderId);
      allow create: if isSignedIn() && isOrderOwner(orderId);
      allow update: if isSignedIn() && isOrderOwner(orderId);
      allow delete: if isSignedIn() && isOrderOwner(orderId);
    }

    /**
     * @description Manages product recommendations for each user, allowing only the user to access their own recommendations.
     * @path /users/{userId}/productRecommendations/{productRecommendationId}
     * @allow (create, update, delete) if request.auth.uid == userId
     * @allow (get, list) if request.auth.uid == userId
     * @deny (create, update, delete) if request.auth.uid != userId
     * @deny (get, list) if request.auth.uid != userId
     * @principle Enforces user-specific access to product recommendations.
     */
    match /users/{userId}/productRecommendations/{productRecommendationId} {
      function isOwner(userId) {
        return request.auth.uid == userId;
      }
        function isSignedIn() {
          return request.auth != null;
        }
      allow get, list: if isSignedIn() && isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && isOwner(userId);
      allow delete: if isSignedIn() && isOwner(userId);
    }

    /**
     * @description Stores cached recipe ingredients, publicly accessible to reduce AI usage.
     * @path /cachedRecipes/{recipeId}
     * @allow get, list: if true
     * @allow create, update, delete: if false; // TODO: Consider rate limiting or admin-only writes.
     * @principle Allows public read access to cached recipe data.
     */
    match /cachedRecipes/{recipeId} {
        function isSignedIn() {
          return request.auth != null;
        }
      allow get, list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }
  }
}