/**
 * @fileoverview Firestore Security Rules for LocalBasket application.
 *
 * Core Philosophy:
 * This ruleset enforces a user-ownership model for user profiles and store management.
 * Orders can be created by authenticated users, and read/written by owners.
 * Read access to stores and products is generally public, but write access is restricted to store owners.
 *
 * Data Structure:
 * - /users/{userId}: User profile data.
 * - /stores/{storeId}: Store data.
 * - /stores/{storeId}/products/{productId}: Product data associated with a store.
 * - /orders/{orderId}: Order data, with denormalized userId and storeId.
 * - /orders/{orderId}/orderItems/{orderItemId}: Order items for each order.
 * - /users/{userId}/productRecommendations/{productRecommendationId}: Product recommendations for users.
 *
 * Key Security Decisions:
 * - Users can only read and write their own profile data.
 * - Store owners can manage their stores and associated products.
 * - Orders can be created by any authenticated user, but only if the order's userId matches the user's UID.
 * - Listing of user documents is disallowed.
 * - Schema validation is relaxed in the Prototyping Phase to allow rapid iteration on the data model.
 *
 * Denormalization for Authorization:
 * - Orders include the userId and storeId to simplify authorization checks.
 * - OrderItems include the orderId to simplify authorization checks.
 * - ProductRecommendations include the userId to simplify authorization checks.
 *
 * Structural Segregation:
 * - Private user data is stored under the /users/{userId} path, separate from public store and product data.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Secure user profiles. Only the user can read/write their own profile.
     * @path /users/{userId}
     * @allow (get, update, delete) auth.uid == userId
     * @allow (create) auth.uid == userId
     * @allow (list) false
     * @deny (get) auth.uid != userId
     * @deny (update,delete) auth.uid != userId
     * @deny (create) auth.uid != userId
     * @principle Enforces user-ownership; users can only access their own data.
     */
    match /users/{userId} {
      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource.data != null;
      }

      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
      allow delete: if isOwner(userId);
    }

    /**
     * @description Secure store data.
     * @path /stores/{storeId}
     * @allow (get, list) true
     * @allow (create) request.auth.uid == request.resource.data.ownerId
     * @allow (update, delete) resource.data.ownerId == request.auth.uid
     * @deny (create, update, delete) request.auth == null
     * @principle Allows public read access but restricts write access to the store owner.
     */
    match /stores/{storeId} {
      function isStoreOwner(storeId) {
        return request.auth.uid == resource.data.ownerId;
      }

      allow get, list: if true;
      allow create: if isSignedIn() && request.auth.uid == request.resource.data.ownerId;
      allow update, delete: if isSignedIn() && isStoreOwner(storeId);
    }

    /**
     * @description Secure product data under stores.
     * @path /stores/{storeId}/products/{productId}
     * @allow (get, list) true
     * @allow (create) get(/databases/$(database)/documents/stores/$(storeId)).data.ownerId == request.auth.uid
     * @allow (update, delete) get(/databases/$(database)/documents/stores/$(storeId)).data.ownerId == request.auth.uid && resource != null
     * @deny (create, update, delete) request.auth == null
     * @principle Allows public read access but restricts write access to the store owner via get() on the parent store.
     */
    match /stores/{storeId}/products/{productId} {
      function isProductOwner(storeId) {
        return get(/databases/$(database)/documents/stores/$(storeId)).data.ownerId == request.auth.uid;
      }

      allow get, list: if true;
      allow create: if isSignedIn() && isProductOwner(storeId);
      allow update, delete: if isSignedIn() && isProductOwner(storeId);
    }

    /**
     * @description Secure order data. Orders can be created by authenticated users with matching userId, and managed by owners.
     * @path /orders/{orderId}
     * @allow (create) request.auth.uid == request.resource.data.userId
     * @allow (get, list, update, delete) resource.data.userId == request.auth.uid
     * @deny (create, update, delete) request.auth == null
     * @principle Orders are associated with a user.
     */
    match /orders/{orderId} {
      function isOrderOwner(orderId) {
        return request.auth.uid == resource.data.userId;
      }

      allow get, list: if isSignedIn() && isOrderOwner(orderId);
      allow create: if isSignedIn() && request.auth.uid == request.resource.data.userId;
      allow update, delete: if isSignedIn() && isOrderOwner(orderId);
    }

     /**
     * @description Secure order item data under orders.
     * @path /orders/{orderId}/orderItems/{orderItemId}
     *  @allow (create, get, list, update, delete) get(/databases/$(database)/documents/orders/$(orderId)).data.userId == request.auth.uid
     * @deny (create, update, delete) request.auth == null
     * @principle  Only the owner of the parent order can manage order items.
     */
    match /orders/{orderId}/orderItems/{orderItemId} {
      function isOrderItemOwner(orderId) {
        return get(/databases/$(database)/documents/orders/$(orderId)).data.userId == request.auth.uid;
      }

      allow get, list: if isSignedIn() && isOrderItemOwner(orderId);
      allow create: if isSignedIn() && isOrderItemOwner(orderId);
      allow update, delete: if isSignedIn() && isOrderItemOwner(orderId);
    }

    /**
     * @description Secure product recommendation data for users.
     * @path /users/{userId}/productRecommendations/{productRecommendationId}
     * @allow (create, get, list, update, delete) request.auth.uid == userId
     * @deny (create, update, delete) request.auth == null
     * @principle  Only the user can manage their product recommendations.
     */
    match /users/{userId}/productRecommendations/{productRecommendationId} {
      function isRecommendationOwner(userId) {
        return request.auth.uid == userId;
      }

      allow get, list: if isSignedIn() && isRecommendationOwner(userId);
      allow create: if isSignedIn() && isRecommendationOwner(userId);
      allow update, delete: if isSignedIn() && isRecommendationOwner(userId);
    }
  }

  function isSignedIn() {
    return request.auth != null;
  }
}