/**
 * @file Firestore Security Rules
 * @description This ruleset enforces a strict user-ownership model for user profiles and store data,
 * with shared access for orders (owner and delivery partner), and public read-only access for cached recipes.
 *
 * Data Structure:
 * - /users/{userId}: Stores user profile data; accessible only by the user.
 * - /stores/{storeId}: Stores store data; accessible only by the store owner.
 * - /stores/{storeId}/products/{productId}: Stores product data; accessible only by the store owner.
 * - /stores/{storeId}/packages/{packageId}: Stores monthly package deals; accessible only by the store owner.
 * - /orders/{orderId}: Stores order data; accessible by the user who placed the order and the assigned delivery partner.
 * - /voice-orders/{voiceOrderId}: Stores voice order data; accessible by delivery partners.
 * - /orders/{orderId}/orderItems/{orderItemId}: Stores order item data; accessible by the user who placed the order and the store.
 * - /users/{userId}/productRecommendations/{productRecommendationId}: Stores product recommendations; accessible only by the user.
 * - /cachedRecipes/{recipeId}: Stores cached recipe data; publicly readable, writeable only by backend functions.
 * - /deliveryPartners/{partnerId}: Stores data about delivery partners; only accessible by the partner themselves.
 * - /deliveryPartners/{partnerId}/payouts/{payoutId}: Stores payout requests; only accessible by the partner themselves.
 *
 * Key Security Decisions:
 * - User data is strictly private and only accessible by the user themselves (Ownership pattern).
 * - Stores and their associated data (products, packages) are only manageable by the store owner (Ownership pattern).
 * - Orders are accessible to both the user who created the order and the assigned delivery partner (Shared Access pattern).
 * - Delivery partner data and payout requests are only accessible by the delivery partner themselves (Ownership pattern).
 * - ProductRecommendations are private and only accessible by the specific user.
 * - CachedRecipes are publicly readable but only writable by trusted server code.
 * - User listing is disallowed.
 *
 * Denormalization for Authorization:
 * - Orders: The 'Order' entity includes 'userId' to easily verify the requesting user is the order owner.
 * - Orders: The 'Order' entity includes 'deliveryPartnerId' to easily verify the delivery partner.
 * - OrderItems: The 'OrderItem' entity includes 'orderId' to easily authorize requests against a parent 'Order'.
 * - ProductRecommendation: The 'ProductRecommendation' includes 'userId' for authorization.
 *
 * Structural Segregation:
 * - Publicly readable data (CachedRecipe) is stored in a separate top-level collection.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Checks if the request is authenticated.
     * @principle Verified Identity: All access requires authentication.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the authenticated user is the owner of the resource.
     * @principle Ownership: Restricts access to resources owned by the user.
     * @param {string} userId The ID of the user to check against.
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

     /**
      * @description Checks if the authenticated user is the owner of the resource, and that the resource exists.
      * @principle Robustness for State-Changing Operations: Verifies document existence before allowing updates or deletes.
      * @param {string} userId The ID of the user to check against.
      */
    function isExistingOwner(userId) {
      return isOwner(userId) && existsAfter(/databases/$(database)/documents/users/$(userId));
    }

    /**
     * @description Checks if the authenticated user is the delivery partner for the resource.
     * @principle Shared Access (Closed Collaborators): Grants access to delivery partners for assigned orders.
     * @param {string} deliveryPartnerId The ID of the delivery partner to check against.
     */
    function isDeliveryPartner(deliveryPartnerId) {
      return isSignedIn() && request.auth.uid == deliveryPartnerId;
    }

    /**
     * @description Rules for user profiles.
     * @path /users/{userId}
     * @allow (create) User 'alice' can create their own profile with matching userId.
     * @deny (create) User 'bob' cannot create a profile with userId 'alice'.
     * @allow (get) User 'alice' can read their own profile.
     * @deny (get) User 'bob' cannot read 'alice's profile.
     * @principle Enforces document ownership for all operations on user profiles.
     */
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
      allow delete: if isOwner(userId);
    }

    /**
     * @description Rules for stores.
     * @path /stores/{storeId}
     * @allow (create) User 'alice' can create a store if they are the owner.
     * @deny (create) User 'bob' cannot create a store owned by 'alice'.
     * @allow (get) User 'alice' can read a store if they are the owner.
     * @deny (get) User 'bob' cannot read a store owned by 'alice'.
     * @principle Enforces document ownership for all operations on stores.
     */
    match /stores/{storeId} {
      allow get: if true;
      allow list: if false;
      allow create: if isSignedIn() && request.resource.data.ownerId == request.auth.uid;
      allow update: if isSignedIn() && request.resource.data.ownerId == request.auth.uid;
      allow delete: if isSignedIn() && request.resource.data.ownerId == request.auth.uid;
    }

    /**
     * @description Rules for products within a store.
     * @path /stores/{storeId}/products/{productId}
     * @allow (create) User 'alice' can create a product in their store.
     * @deny (create) User 'bob' cannot create a product in 'alice's store.
     * @allow (get) Any user can read a product in a store.
     * @principle Enforces store ownership for product creation and modification.
     */
    match /stores/{storeId}/products/{productId} {
      allow get: if true;
      allow list: if false;
      allow create: if isSignedIn() && get(/databases/$(database)/documents/stores/$(storeId)).data.ownerId == request.auth.uid;
      allow update: if isSignedIn() && get(/databases/$(database)/documents/stores/$(storeId)).data.ownerId == request.auth.uid;
      allow delete: if isSignedIn() && get(/databases/$(database)/documents/stores/$(storeId)).data.ownerId == request.auth.uid;
    }

     /**
      * @description Rules for monthly packages within a store.
      * @path /stores/{storeId}/packages/{packageId}
      * @allow (create) User 'alice' can create a package in their store.
      * @deny (create) User 'bob' cannot create a package in 'alice's store.
      * @allow (get) Any user can read a monthly package in a store.
      * @principle Enforces store ownership for package creation and modification.
      */
    match /stores/{storeId}/packages/{packageId} {
      allow get: if true;
      allow list: if false;
      allow create: if isSignedIn() && get(/databases/$(database)/documents/stores/$(storeId)).data.ownerId == request.auth.uid;
      allow update: if isSignedIn() && get(/databases/$(database)/documents/stores/$(storeId)).data.ownerId == request.auth.uid;
      allow delete: if isSignedIn() && get(/databases/$(database)/documents/stores/$(storeId)).data.ownerId == request.auth.uid;
    }

    /**
     * @description Rules for orders.
     * @path /orders/{orderId}
     * @allow (get) User 'alice' can read their own order.
     * @allow (update) User 'alice' can update their own order.
     * @allow (get) Delivery partner 'bob' can read order if assigned.
     * @principle Enforces order ownership for users and shared access for delivery partners.
     */
    match /orders/{orderId} {
      allow get: if isSignedIn() && (getSelf().data.userId == request.auth.uid || getSelf().data.deliveryPartnerId == request.auth.uid);
      allow list: if false;
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update: if isSignedIn() && (getSelf().data.userId == request.auth.uid || getSelf().data.deliveryPartnerId == request.auth.uid);
      allow delete: if isSignedIn() && getSelf().data.userId == request.auth.uid;

            function getSelf() {
        return get(/databases/$(database)/documents/orders/$(orderId));
      }
    }

    /**
     * @description Rules for voice orders.
     * @path /voice-orders/{voiceOrderId}
     * @allow (get) Delivery partners can read voice orders.
     * @principle Grants access to delivery partners for order fulfillment.
     */
    match /voice-orders/{voiceOrderId} {
      allow get: if isSignedIn();
      allow list: if false;
      allow create: if false; // Voice orders are created and managed by a trusted backend.
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Rules for order items.
     * @path /orders/{orderId}/orderItems/{orderItemId}
     * @allow (get) User can read order items if they own the order.
     * @principle Enforces order ownership for access to order items.
     */
    match /orders/{orderId}/orderItems/{orderItemId} {
      allow get: if isSignedIn() && get(/databases/$(database)/documents/orders/$(orderId)).data.userId == request.auth.uid;
      allow list: if false;
      allow create: if isSignedIn() && get(/databases/$(database)/documents/orders/$(orderId)).data.userId == request.auth.uid;
      allow update: if isSignedIn() && get(/databases/$(database)/documents/orders/$(orderId)).data.userId == request.auth.uid;
      allow delete: if isSignedIn() && get(/databases/$(database)/documents/orders/$(orderId)).data.userId == request.auth.uid;
    }

    /**
     * @description Rules for product recommendations.
     * @path /users/{userId}/productRecommendations/{productRecommendationId}
     * @allow (get) User can read their own product recommendations.
     * @principle Enforces user ownership for access to product recommendations.
     */
    match /users/{userId}/productRecommendations/{productRecommendationId} {
      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
      allow delete: if isOwner(userId);
    }

     /**
      * @description Rules for cached recipes.
      * @path /cachedRecipes/{recipeId}
      * @allow (get) Any user can read cached recipes.
      * @principle Allows public read access to cached recipe data.
      */
    match /cachedRecipes/{recipeId} {
        allow get: if true;
        allow list: if false;
        allow create: if false; // Only backend functions can write cached recipes.
        allow update: if false;
        allow delete: if false;
    }

    /**
     * @description Rules for delivery partners.
     * @path /deliveryPartners/{partnerId}
     * @allow (get) Delivery partner can read their own data.
     * @principle Enforces ownership for delivery partner data.
     */
    match /deliveryPartners/{partnerId} {
      allow get: if isOwner(partnerId);
      allow list: if false;
      allow create: if isOwner(partnerId);
      allow update: if isOwner(partnerId);
      allow delete: if isOwner(partnerId);
    }

    /**
     * @description Rules for payout requests.
     * @path /deliveryPartners/{partnerId}/payouts/{payoutId}
     * @allow (get) Delivery partner can read their own payout requests.
     * @principle Enforces ownership for payout request data.
     */
    match /deliveryPartners/{partnerId}/payouts/{payoutId} {
      allow get: if isOwner(partnerId);
      allow list: if false;
      allow create: if isOwner(partnerId);
      allow update: if isOwner(partnerId);
      allow delete: if isOwner(partnerId);
    }
  }
}